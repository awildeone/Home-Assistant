blueprint:
  name: ESPHome Remote — Full Button Actions
  description: Handle all button presses from an ESPHome remote with configurable actions for short and long press.
  domain: automation
  input:
    remote_device:
      name: Remote Device
      description: The ESPHome remote entity that sends button press events.
      selector:
