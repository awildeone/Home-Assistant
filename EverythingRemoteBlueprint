trigger:
  - platform: event
    event_type: esphome.remote_button_pressed
    event_data:
      remote_id: !input remote_id

action:
  - choose:
      - conditions:
          - condition: template
            value_template: "{{ trigger.event.data.button == 'power' and trigger.event.data.type == 'single' }}"
        sequence:
          - !input power_single
      - conditions:
          - condition: template
            value_template: "{{ trigger.event.data.button == 'power' and trigger.event.data.type == 'long' }}"
        sequence:
          - !input power_long

      - conditions:
